<UserControl x:Class="SmartOfficeMetro.NotificationTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartOfficeMetro"
             mc:Ignorable="d" Height="30.22" Width="392.395">
    <!-- 34.22 -->
    <Grid x:Name="TileRow">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer x:Name="descriptionPanel" Margin="0,0,-2,0" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="1" Visibility="Visible" Panel.ZIndex="1" >
            <Grid>
                <Label x:Name="labelDescription" Content="Test Content" Foreground="White" FontSize="16" Panel.ZIndex="1"/>
            </Grid>
        </ScrollViewer>



        <Label x:Name="labelHeader" Content="Content estttt" Grid.Column="1" Margin="0,0,0,0" FontSize="16" Foreground="White" Panel.ZIndex="1" />
        <Label x:Name="labelSender" Content="Label" Margin="10,0,0,0" Foreground="White" FontSize="14.667" Panel.ZIndex="1"/>

        <Rectangle x:Name="highligter" Grid.ColumnSpan="3" Height="28" Margin="0,0,-2,0" VerticalAlignment="Top" MouseLeftButtonDown="LabelHeader_MouseLeftButtonDown" Panel.ZIndex="2">
            <Rectangle.Style>
                <Style TargetType="Rectangle">

                    <Setter Property="Fill" Value="Transparent" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Fill" Value="{StaticResource HighlightBrushCustom}"></Setter>

                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Rectangle.Style>
        </Rectangle>
        <Button x:Name="buttonFetch" Content="Fetch Mail" HorizontalAlignment="Left" Margin="0,0,-16,0" VerticalAlignment="Top" Width="65" Panel.ZIndex="2" Grid.Column="2" />


    </Grid>
</UserControl>
